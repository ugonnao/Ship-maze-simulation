    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/ship_debug",
            "stdio": [
                "test-12-sm.txt",     // file to read as stdin. Use `null` (without quotes) if you don't want to redirect stdin.
                "output.txt",    // as above, but for stdout
                "error.txt"      // as above, but for stderr
            ],
            "args": ["-s", "-o", "M"],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "postDebugTask": "clean workspace"
        }
    ]
}